@using Entities.Concrete;
@model List<Blog>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Bloglar</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">

                <div class="row">

                    @foreach (var blog in Model)
                    {
                        <div class="col-lg-4 card mb-3 ">
                            <a href="/Blog/BlogDetails/@blog.BlogId">
                                <img src="~/tema/images/@blog.BlogImage" class="card-img-top img-fluid" alt="">
                            </a>
                            <div class="card-body">
                                <ul class="blog-icons my-4">
                                    <li>
                                        <a href="#">
                                            <i class="far fa-calendar-alt"></i>
                                            @(((DateTime)blog.BlogCreateDate).ToString("dd-MMM-yyyy"))
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a href="#">
                                            <i class="far fa-comment"></i> 21
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fas fa-eye"></i> @blog.Category.CategoryName
                                        </a>
                                    </li>

                                </ul>
                                <h5 class="card-title">
                                    <a href="/Blog/BlogDetails/@blog.BlogId">@blog.BlogTitle</a>
                                </h5>
                                <p class="card-text mb-3 text-justify">

                                    @blog.BlogContent.Substring(0,blog.BlogContent.Substring(0,100).LastIndexOf(" "))...

                                </p>
                                <a href="/Blog/BlogDetails/@blog.BlogId" class="btn btn-primary btn-sm">Devamını oku</a>
                            </div>
                        </div>
                    }





                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>